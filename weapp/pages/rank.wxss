page {
  background: #fae37c;
}
.rank {
  padding: 30rpx;
}
.rank .img-rank {
  text-align: left;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}
.rank .img-rank image {
  height: 160rpx;
  width: 400rpx;
}
.rank .list {
  border-radius: 20rpx;
  background: #ffffff;
  padding: 20rpx;
  padding-top: 0rpx;
}
.rank .list .item {
  padding: 30rpx 0rpx;
  position: relative;
}
.rank .list .item::after {
  content: ' ';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-top: 0.4px solid rgba(235, 237, 245, 0.8);
  color: rgba(235, 237, 245, 0.8);
}
.rank .list .item.item-hover {
  background: #f4f4f4;
}
.btn-follow {
  font-size: 24rpx;
  background: #fae37c;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  line-height: normal;
  display: flex;
  align-items: center;
}
.btn-follow .icon {
  font-size: 30rpx;
}
.btn-follow.follow {
  background: #f8f8f8;
  color: #b2b2b2;
  box-shadow: none;
}
.btn-follow.btn-hover {
  background: rgba(250, 227, 124, 0.5);
}
.rank-num {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  margin-right: 30rpx;
  font-weight: bold;
  color: #474747;
}
.rank-num .icon {
  font-size: 48rpx;
}
.rank-num image {
  width: 56rpx;
  height: 56rpx;
}

