.navigation-title {
  font-size: 34rpx;
}
.topic {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  margin: 20rpx 0rpx;
  font-size: 34rpx;
  color: #409eff;
}
.topic image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 10rpx;
}
.topic .topic-content {
  flex-grow: 1;
  margin-left: 30rpx;
}
.topic .topic-content .title {
  color: #000;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.topic .topic-content .num {
  color: #b2b2b2;
  font-size: 26rpx;
}
.topic .topic-content .num text {
  margin-right: 8rpx;
}
.topic .title {
  flex-grow: 1;
}
.topic .des {
  font-size: 24rpx;
}
.comments {
  background: #ffffff;
}
.comments .comments-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 20rpx;
}
.comments .comments-top .title {
  font-size: 32rpx;
}
.comments .comments-top .zan {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #b2b2b2;
  margin: 30rpx 0rpx;
}
.comments .comments-top .zan image {
  width: 36rpx;
  height: 36rpx;
  border-radius: 36rpx;
  border: #ffffff solid 4rpx;
  margin-right: -14rpx;
}
.comments .comments-top .zan .zan-des {
  margin-left: 24rpx;
}
.main {
  background: #fff;
  padding-bottom: 30rpx;
}
.main .post-share {
  display: flex;
  align-items: center;
  padding: 0rpx 60rpx;
}
.main .post-share button {
  flex-grow: 1;
  margin-right: 30rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.main .post-share button .icon {
  margin-right: 10rpx;
  font-size: 36rpx;
}
.main .post-share button::after {
  border: none;
}
.main .post-share button:last-child {
  margin-right: 0rpx;
}
.btn-gift {
  font-size: 32rpx;
  background: #fae37c;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.5);
  padding: 20rpx 0rpx;
  border-radius: 50rpx;
  line-height: normal;
  display: flex;
  align-items: center;
  margin: 30rpx auto;
  margin-bottom: 20rpx;
  width: 300rpx;
  justify-content: center;
}
.btn-gift::after {
  border: none;
}
.btn-gift.btn-disabled {
  background: #f8f8f8;
  color: #8a8a8a;
  box-shadow: none;
}
.btn-gift .icon {
  font-size: 42rpx;
  margin-right: 10rpx;
}
.btn-gift.btn-hover {
  background: rgba(250, 227, 124, 0.5);
}
.gift-des {
  color: #d81e06;
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
.gift-des .icon {
  margin-right: 8rpx;
}
.btn-des {
  font-size: 26rpx;
  color: #7a8299;
  text-align: center;
  margin-bottom: 30rpx;
}
.dialog .dialog-title {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 34rpx;
  padding: 30rpx 0rpx;
  padding-bottom: 0rpx;
}
.dialog .dialog-title .icon {
  font-size: 56rpx;
  margin-right: 8rpx;
}
.dialog .dialog-title-des {
  font-size: 26rpx;
  text-align: center;
  color: #b2b2b2;
  padding-bottom: 40rpx;
}
.dialog .dialog-content {
  display: flex;
  flex-wrap: wrap;
}
.dialog .dialog-content .item {
  flex-basis: 220rpx;
  color: #8a8a8a;
  border: solid #f1f1f1 1rpx;
  padding: 30rpx 0rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  text-align: center;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
}
.dialog .dialog-content .item.active {
  border-color: #fae37c;
  background: #fae37c;
  color: #000;
}

