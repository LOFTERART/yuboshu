page {
  background: #ffd100;
}
.share {
  position: relative;
}
.share .footer {
  position: fixed;
  width: 100%;
  text-align: center;
  left: 0rpx;
  bottom: 0rpx;
  background: #ffd100;
  padding: 40rpx 0rpx;
  box-shadow: 0px -15px 10px rgba(255, 209, 0, 0.9);
}
.share .footer .btn {
  background: #ffffff;
  border: #000000 solid 6rpx;
  box-shadow: 0px 6px 0px #000000;
  display: inline-block;
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx 60rpx;
  border-radius: 80rpx;
}

