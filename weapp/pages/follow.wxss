.list {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.list .item {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}
.list .item .item-content {
  padding-left: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .item .item-content .item-txt {
  margin: 20rpx 0rpx;
  font-size: 28rpx;
  color: #7a8299;
}
.list .item .item-content .item-txt .icon {
  margin-right: 8rpx;
  font-size: 34rpx;
  color: #7a8299;
}
.list .item .item-content .item-date {
  font-size: 24rpx;
  color: #b2b2b2;
  margin-top: 20rpx;
}
.btn-follow {
  font-size: 24rpx;
  background: #fae37c;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  line-height: normal;
  display: flex;
  align-items: center;
}
.btn-follow .icon {
  font-size: 30rpx;
}
.btn-follow.has-follow {
  background: #f8f8f8;
  color: #b2b2b2;
  box-shadow: none;
}
.btn-follow.btn-hover {
  background: rgba(250, 227, 124, 0.5);
}

