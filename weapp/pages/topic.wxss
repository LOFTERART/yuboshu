.user-back .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
}
.shadow {
  position: fixed;
  width: 950rpx;
  height: calc(100vh);
  top: -200rpx;
  left: -100rpx;
  overflow: hidden;
  z-index: -1;
}
.shadow .shadow-main {
  width: 950rpx;
  height: calc(100vh);
  top: -100rpx;
  left: -100rpx;
  -webkit-filter: blur(100rpx) brightness(0.7);
  filter: blur(100rpx) brightness(0.7);
}
.head {
  color: #fff;
  padding: 0rpx 30rpx;
  margin-bottom: 60rpx;
}
.head .topic {
  display: flex;
  align-items: center;
  padding: 30rpx 0rpx;
}
.head .topic image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  flex-basis: 140rpx;
  flex-shrink: 0;
}
.head .topic .topic-info {
  margin-left: 20rpx;
  flex-grow: 1;
}
.head .topic .topic-info .title {
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.head .topic .topic-info .des {
  font-size: 24rpx;
  color: #fff;
}
.head .tool {
  display: flex;
  align-items: center;
}
.head .tool .count text {
  font-size: 26rpx;
  margin-right: 10rpx;
}
.head .tool .rank {
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  flex-grow: 1;
}
.head .tool .rank .ic {
  width: 56rpx;
  height: 43rpx;
}
.head .tool .rank .rank-name {
  font-size: 26rpx;
}
.head .tool .rank .imgs {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.head .tool .rank .imgs image {
  width: 36rpx;
  height: 36rpx;
  border-radius: 36rpx;
  border: #ffffff solid 2rpx;
  margin-right: -14rpx;
}
.head .tool .rank .icon {
  font-weight: bold;
  font-size: 30rpx;
  margin-left: 8rpx;
}
.head .tool .tool-action .btn {
  font-size: 28rpx;
  background: #fae37c;
  padding: 14rpx 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  line-height: normal;
}
.head .tool .tool-action .btn::after {
  border: none;
}
.head .tool .tool-action .btn.has {
  box-shadow: none;
  background: #f8f8f8;
  color: #b2b2b2;
  font-size: 26rpx;
}
.main {
  background: #ffffff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
  padding-top: 98rpx;
}
.main .tab-box {
  width: 100%;
  left: 0rpx;
  top: 0rpx;
  z-index: 1000;
}
.main .tab-box .bar-ext {
  text-align: left;
}
.main .list {
  background: #fff;
}
.action-tool {
  position: fixed;
  bottom: 60rpx;
  right: 30rpx;
  transition: all 0.3s;
}
.action-tool .btn-i {
  width: 96rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background: #fae37c;
  border-radius: 96rpx;
  box-shadow: 2px 3px 6px rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  position: relative;
}
.action-tool .btn-i .icon {
  font-size: 56rpx;
}

