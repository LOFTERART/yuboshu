.maidan .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}
.maidan .top .top-left {
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #409eff;
}
.maidan .top .top-left .icon {
  font-size: 36rpx;
  margin-right: 6rpx;
}
.maidan .list {
  background: #fff;
}
.maidan .list .item {
  padding-left: 30rpx;
}
.maidan .list .item.item-hover {
  background: #fafafa;
}
.maidan .list .item .item-main {
  display: flex;
  align-items: center;
  padding: 30rpx;
  padding-left: 0rpx;
  position: relative;
}
.maidan .list .item .item-main::after {
  content: ' ';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 0.4px solid rgba(235, 237, 245, 0.8);
  color: rgba(235, 237, 245, 0.8);
}
.maidan .list .item .item-main image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 8rpx;
}
.maidan .list .item .item-main .item-content {
  flex-grow: 1;
  text-align: left;
  margin-left: 20rpx;
}
.maidan .list .item .item-main .item-content .item-title {
  display: flex;
  align-items: center;
}
.maidan .list .item .item-main .item-content .item-title .item-title-t {
  flex-grow: 1;
  font-size: 30rpx;
  font-weight: bold;
  color: #2b2a2a;
}
.maidan .list .item .item-main .item-content .item-title .item-title-c {
  color: #b2b2b2;
  font-size: 24rpx;
}
.maidan .list .item .item-main .item-content .item-des {
  font-size: 24rpx;
  margin-top: 8rpx;
  color: #b2b2b2;
  max-width: 400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  /*设置文本行数限制*/
  -webkit-box-orient: vertical;
  /*设置文本排列方式*/
}
.maidan .list .item .item-main .item-action .btn {
  font-size: 28rpx;
  background: #fae37c;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.5);
  padding: 14rpx 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  line-height: normal;
}
.maidan .list .item .item-main .item-action .btn::after {
  border: none;
}
.maidan .list .item .item-main .item-action .btn.has {
  box-shadow: none;
  background: #f8f8f8;
  color: #b2b2b2;
  font-size: 26rpx;
}
.maidan .list .item .item-main .item-action .icon {
  font-size: 32rpx;
  margin-right: 6rpx;
  font-weight: bold;
}
.maidan .btn-add {
  position: fixed;
  left: 100rpx;
  bottom: 20rpx;
  background: #fae37c;
  color: #13100e;
  border: none;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.3);
  padding: 20rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-radius: 80rpx;
  width: 550rpx;
  box-sizing: border-box;
  justify-content: center;
}
.maidan .btn-add .icon {
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.maidan .btn-add.btn-hover {
  background: rgba(250, 227, 124, 0.9);
}

