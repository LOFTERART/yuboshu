.post-user-item {
  background: #ffffff;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  align-content: flex-start;
  padding: 30rpx;
}
.post-user-item .left {
  flex-basis: 140rpx;
}
.post-user-item .left .left-c {
  display: flex;
}
.post-user-item .left .left-c .day {
  font-size: 48rpx;
  font-weight: bold;
}
.post-user-item .left .left-c .month {
  font-size: 24rpx;
  font-weight: lighter;
  align-self: flex-end;
  margin-left: 6rpx;
}
.post-user-item .right {
  flex-basis: 550rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
}
.post-user-item .right .content {
  font-size: 32rpx;
  color: var(--txt-content);
  margin-bottom: 30rpx;
  text-align: left;
}
.post-user-item .right .content .icon-img {
  width: 34rpx;
  height: 34rpx;
}
.post-user-item .right .content .topic {
  color: #409eff;
  margin-right: 10rpx;
}
.post-user-item .right .imgs {
  margin-bottom: 20rpx;
}
.post-user-item .right .imgs image {
  width: 80%;
  border-radius: 20rpx;
}
.post-user-item .right .imgs.images image {
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.post-user-item .right .count {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}
.post-user-item .right .count .count-item {
  flex-grow: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: var(--txt-primary);
  font-size: 26rpx;
}
.post-user-item .right .count .count-item.item-more {
  flex-grow: 0;
}
.post-user-item .right .count .count-item.item-lock {
  color: #b2b2b2;
  font-size: 24rpx;
}
.post-user-item .right .count .count-item.item-lock .icon {
  font-size: 26rpx;
}
.post-user-item .right .count .icon {
  margin-right: 0rpx;
  margin-right: 8rpx;
  font-size: 42rpx;
}
.post-user-item .right .count .note {
  color: #b2b2b2;
  font-size: 24rpx;
  flex-grow: 1;
}
.post-user-item .right .location {
  margin-top: 30rpx;
}
.post-user-item .right .location .address {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #24c688;
}
.post-user-item .right .location .address image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.post-user-item .right .location .address .icon-arr-right {
  font-size: 36rpx;
}
.post-user-item .right .topic {
  font-size: 26rpx;
  color: #409eff;
  background: #ecf8ff;
  padding: 6rpx 14rpx;
  border-radius: 50rpx;
  margin-right: 10rpx;
  display: inline-block;
}
.post-user-item .right .topic text {
  font-size: 26rpx;
}
.post-user-item .right .topic .icon {
  font-weight: bold;
}
.post-user-item .right .topic .icon-topic-full {
  font-weight: normal;
  font-size: 30rpx;
  margin-right: 6rpx;
}

